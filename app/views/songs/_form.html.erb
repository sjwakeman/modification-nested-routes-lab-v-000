<%= form_for @song  do |f| %>
  <%= artist_id_field(@song) %>
  <br>
  <%= f.label :title %>
    <% if @song.artist.nil? %>
      <% f.select :artist_id, options_from_collection_for_select(Artist.all, :id, :name) %><br>
    <% end %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.submit %>
<% end %>
